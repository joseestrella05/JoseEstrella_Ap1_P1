@page "/Pretamos/Index"
@rendermode InteractiveServer
@inject PrestamoService servicio
@inject NavigationManager navigation

<PageTitle>Registro Prestamo</PageTitle>
<div class="container">
    <div class="card shadow-lg">
        <div class="card-header">
            <h5 class="card-header text-center bg-primary">Registro Pretamo</h5>
        </div>

            <div class="card-body">
                <div class="col-md-3">
                <a href=" /Prestamo/Create" class="btn btn-success" type="button"><span class="bi bi-floppy"></span> Crear </a>
                </div>
            </div>
       
        @*body*@
        <table class="table table-striped-columns table-hover text-center">
            <thead >
                <tr>
                    <th>Id</th>
                    <th>Deudor</th>
                    <th>Concepto</th>
                    <th>Monto</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var prestamo in ListPretamo)
                    {
                        <td>@prestamo.Id</td>
                        <td>@prestamo.Deudor</td>
                        <td>@prestamo.Concepto</td>
                        <td>@prestamo.Monto</td>
                        <td class="text-center">
                            <a href="/Prestamo/Edit/@prestamo.Id" class="btn btn-success bi bi-pencil-square ">Modificar</a>
                        </td>
                        <td class="text-center">
                            <a href="/Prestamo/Delete/@prestamo.Id" class="btn btn-danger bi bi-trash ">Eliminar</a>
                        </td>
                    }

                </tr>
  
            </tbody>
        </table>
    </div>
</div>

@code {
    public List<Pretamos> ListPretamo = new List<Pretamos>();

    protected override async Task OnInitializedAsync()
    {
        ListPretamo = await servicio.Listar(c => true);
    }
    
        

    

}
